{
    "actions": [
        {
            "command": "deploy_linaro_kernel",
            "metadata": {
                "image.type": "{image_type}",
                "image.url": "{image_url}",
                "kernel.tree": "{tree}",
                "kernel.version": "{kernel_version}",
                "kernel.endian": "{endian}",
                "kernel.defconfig": "{defconfig}",
                "platform.fastboot": "{fastboot}",
                "bootloadertype": "uefi",
                "test.plan": "{test_plan}"
            },
            "parameters": {
                "dtb": "{dtb_url}",
                "kernel": "{kernel_url}",
                "bootloadertype": "uefi",
                "target_type": "{target_type}"
            }
        },
        {
            "command": "boot_linaro_image",
            "parameters": {
                "options": [
                    "boot_cmds=boot_cmds_nfs"
                ]
            }
        },
        {
            "command": "lava_command_run",
            "parameters": {
                "commands": [
                    "cd /sys_setup/bin",
                    "echo \"1\\n\" | sudo ./sys_setup.sh -d {distro_name}"
                ]
            }
        },
        {
            "command": "submit_results",
            "parameters": {
                "server": "LAVA_SERVER",
                "stream": "BUNDLE_STREAM"
            }
        }
    ],
    "device_type": "{device_type}",
    "description": "deploy {distro_name} to sata",
    "job_name": "{job_name}",
    "logging_level": "DEBUG",
    "priority": "high",
    "timeout": 7200
}
