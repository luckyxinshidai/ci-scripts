{
    "actions": [
        {
            "command": "deploy_linaro_kernel",
            "metadata": {
                 "image.type": "{image_type}",
                "image.url": "{image_url}",
                "kernel.tree": "{tree}",
                "kernel.version": "{kernel_version}",
                "kernel.endian": "{endian}",
                "kernel.defconfig": "{defconfig}",
                "platform.fastboot": "{fastboot}",
                "bootloadertype": "uefi",
                "test.plan": "{test_plan}"
            },
            "parameters": {
                "kernel": "{kernel_url}",
                "dtb": "{dtb_url}",
                "bootloadertype": "uefi",
                "target_type": "{target_type}"
            }
        },
        {
            "command": "boot_linaro_image",
            "parameters": {
                "options": [
                    "boot_cmds=boot_cmds_sas"
                ]
            }
        },
        {
            "command": "lava_command_run",
            "parameters": {
                "commands": [
                    "test -d ~/.ssh || mkdir ~/.ssh",
                    "echo '{lava_worker_pubkey}' >> ~/.ssh/authorized_keys",
                    "cp /etc/ssh/sshd_config /etc/ssh/sshd_config_bk",
                    "sed -i 's/^PermitRootLogin without-password/PermitRootLogin yes/' /etc/ssh/sshd_config",
                    "service ssh restart || systemctl restart sshd",
                    "ifconfig || ip addr"
                ]
            }
        },
        {
            "command": "submit_results",
            "parameters": {
                    "server": "LAVA_SERVER",
                    "stream": "BUNDLE_STREAM"
            }
        }
    ],
    "device_type": "{device_type}",
    "job_name": "{job_name}_{distro}",
    "logging_level": "DEBUG",
    "priority": "high",
    "timeout": 7200
}
